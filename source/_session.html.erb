<% if event.speaker %>
  <td>
    <% unless event.non_speaking_event_with_details %>
      <%= image_tag event.image, alt: event.speaker %>
    <% end %>
    <div id="<%= event.anchor %>">
      <h3><%= event.name %></h3>
      <% if event.non_speaking_event_with_details %>
          <p>Hosted by <%= event.speaker %></p>
        <% else %>
          <p>by <%= link_to event.speaker, '/speakers/', :fragment => event.anchor %></p>
    <% end %>
      <p class="session-description">
        <%= event.description %>
      </p>
    </div>
  </td>
<% else %>
  <td>
    <h3><%= event.name %></h3>
  </td>
<% end %>
